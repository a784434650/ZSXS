<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_item_more_tj"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:background="@mipmap/guodu_icon"/>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:id="@+id/tv_item_more_tj"
                android:text="微积分"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_below="@id/tv_item_more_tj"
                android:textSize="13sp"
                android:id="@+id/tv_info_item_more_tj"
                android:text="info"
                android:lines="2"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/tv_item_more_keshi"
                    android:textColor="@color/nomalColor"
                    android:layout_alignParentBottom="true"
                    android:text="课时"
                    android:drawableLeft="@mipmap/keshi_smart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:layout_marginLeft="3dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/jifen_smart"
                    android:id="@+id/iv_item_more_jifen"
                    />
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_item_more_jifen"
                    android:text="积分"
                    android:gravity="center"
                    android:textColor="@color/nomalColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="12sp"
                    android:text="abc"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_item_more_dianjiliang"
                    android:gravity="center"
                    android:textColor="@color/nomalColor"
                    android:drawableLeft="@mipmap/dianjiliang_smart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@mipmap/my_center_line"/>
</LinearLayout>