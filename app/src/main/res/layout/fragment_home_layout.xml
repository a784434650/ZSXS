<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor"
        android:padding="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@mipmap/main_logo"/>
        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="@mipmap/main_search"
            android:layout_toRightOf="@id/iv_home"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:id="@+id/ib_sign"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/sign"
            android:layout_toRightOf="@id/ib_search"
            android:layout_marginLeft="10dp"/>
        <ImageButton
            android:id="@+id/ib_scan"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:background="@mipmap/scan"
            android:layout_toRightOf="@id/ib_sign"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--轮播图-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_home"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"></android.support.v4.view.ViewPager>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/ll_image_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"></LinearLayout>
            </RelativeLayout>
            <!--2017-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <LinearLayout
                    android:id="@+id/ll_kzdr"
                    style="@style/ZtLayoutStyle"
                    >
                    <ImageButton
                        style="@style/ZtPicStyle"
                        android:background="@mipmap/app01"/>
                    <TextView
                        android:text="考证达人"
                        style="@style/ZtTxtStyle"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_zcjy"
                    style="@style/ZtLayoutStyle"
                    >
                    <ImageButton
                        style="@style/ZtPicStyle"
                        android:background="@mipmap/app02"/>
                    <TextView
                        style="@style/ZtTxtStyle"
                        android:text="职场精英" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_shyq"
                    style="@style/ZtLayoutStyle"
                    >
                    <ImageButton
                        style="@style/ZtPicStyle"
                        android:background="@mipmap/app03"/>
                    <TextView
                        android:text="生活易趣"
                        style="@style/ZtTxtStyle"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_qypx"
                    style="@style/ZtLayoutStyle"
                    >
                    <ImageButton
                        style="@style/ZtPicStyle"
                        android:background="@mipmap/app04"/>
                    <TextView
                        style="@style/ZtTxtStyle"
                        android:text="企业培训" />
                </LinearLayout>
            </LinearLayout>
            <!--粗横线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@mipmap/home_line"/>
            <!--每周百分课-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_bfk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每周百分课"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每周更新三门热点课程，只需要100积分哦！"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_below="@id/tv_bfk"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/home_baifenke"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <!--细横线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@mipmap/home_line"
                android:layout_marginTop="8dp"/>
            <!--三个百分课-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <LinearLayout
                    android:id="@+id/ll_bfk01"
                    style="@style/ZtLayoutStyle"
                    android:background="@drawable/bg_gary_selector">
                    <ImageView
                        android:id="@+id/iv_bfk_pic01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_bfk_01"
                        style="@style/BfkTxtStyle"
                        android:text="响应式网页设计"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_bfk02"
                    style="@style/ZtLayoutStyle"
                    android:background="@drawable/bg_gary_selector"
                    android:layout_marginLeft="8dp">
                    <ImageView
                        android:id="@+id/iv_bfk_pic02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_bfk_02"
                        style="@style/BfkTxtStyle"
                        android:text="大学英语四级" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_bfk03"
                    style="@style/ZtLayoutStyle"
                    android:background="@drawable/bg_gary_selector"
                    android:paddingLeft="8dp">
                    <ImageView
                        android:id="@+id/iv_bfk_pic03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_bfk_03"
                        style="@style/BfkTxtStyle"
                        android:text="科普知识" />
                </LinearLayout>
            </LinearLayout>
            <!--横线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@mipmap/home_line"/>
            <RelativeLayout
                android:id="@+id/rl_more_tj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="推荐课程"/>
                <ImageView
                    android:id="@+id/iv_gotoright"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@mipmap/goto_right"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="更多"
                    android:paddingTop="2dp"
                    android:textSize="15sp"
                    android:layout_toLeftOf="@id/iv_gotoright" />
            </RelativeLayout>
            <!--细横线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@mipmap/home_line"
                android:layout_marginTop="8dp"/>
            <com.huida.zsxs.view.NoSrollGridview
                android:id="@+id/gv_tj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2">

            </com.huida.zsxs.view.NoSrollGridview>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>