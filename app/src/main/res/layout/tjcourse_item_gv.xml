<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@drawable/bg_gary_selector"
        android:id="@+id/ll_gv_item"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:background="@mipmap/list_course_no_data"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/iv_tj_lession"/>
        <TextView
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:padding="3dp"
            android:lines="1"
            android:text="北京·绚丽之夜"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tj_lession"/>
        <TextView
            android:gravity="center"
            android:background="@android:color/transparent"
            android:lines="1"
            android:textColor="#929390"
            android:textSize="12sp"
            android:padding="3dp"
            android:text="gewtfsggasdfgds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tj_lession_des"/>
        <LinearLayout
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:textSize="13sp"
                android:background="@android:color/transparent"
                android:id="@+id/tv_tj_keshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nomalColor"
                android:text="50课时"
                android:drawableLeft="@mipmap/keshi_smart"/>
            <TextView
                android:textSize="13sp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_tj_dianjiliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nomalColor"
                android:text="830"
                android:drawableLeft="@mipmap/dianjiliang_smart"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>