<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_item_detail"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:background="@mipmap/guodu_icon"/>

        <RelativeLayout
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="15sp"
                android:id="@+id/tv_item_detail"
                android:text="微积分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll_bottom_three"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_item_detail_keshi"
                    android:textColor="@color/nomalColor"
                    android:layout_alignParentBottom="true"
                    android:text="课时"
                    android:drawableLeft="@mipmap/keshi_smart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:layout_marginLeft="3dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/jifen_smart"
                    android:id="@+id/iv_item_detail_jifen"
                    />
                <TextView
                    android:id="@+id/tv_item_detail_jifen"
                    android:text="积分"
                    android:gravity="center"
                    android:textColor="@color/nomalColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="abc"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_item_detail_dianjiliang"
                    android:gravity="center"
                    android:textColor="@color/nomalColor"
                    android:drawableLeft="@mipmap/dianjiliang_smart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@mipmap/my_center_line"/>

</LinearLayout>