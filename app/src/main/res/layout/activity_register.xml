<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        style="@style/rl_topbar_bg">
    <Button
        android:id="@+id/bt_register_back"
        style="@style/bt_topbar_back"
        android:text="注册"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_register_nickname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/zhuce_nickname_icon"
        android:hint="给自己起个个性的昵称吧"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:background="@null"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/base_horizontal_line"/>
    <EditText
        android:id="@+id/et_register_shouji"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/zhuce_shouji_icon"
        android:hint="填写11位手机号，其他用户不可见"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:background="@null"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/base_horizontal_line"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/et_register_yanzheng"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/zhuce_shouji_yanzheng"
            android:hint="手机验证码"
            android:textSize="14sp"
            android:background="@null"/>
        <Button
            android:id="@+id/bt_register_getcode"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="获取验证码"
            android:textSize="13sp"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_yzm_shape"
            android:textColor="#fff" />
    </RelativeLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/base_horizontal_line"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/et_register_mima"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/zhuce_mima_icon"
            android:hint="6-14个字母或数字,不允许有空格"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:background="@null"/>
        <CheckBox
            android:id="@+id/cb_register_islook"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:layout_toRightOf="@id/et_register_mima"
            android:background="@drawable/zhuce_mima_selector" />
    </RelativeLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/base_horizontal_line"/>

    <EditText
        android:id="@+id/et_register_tuijian"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/zhuce_tuijian_ma_icon"
        android:hint="推荐码(选填)"
        android:background="@null"
        android:textSize="14sp"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@mipmap/base_horizontal_line"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="阅读并接受"/>
        <TextView
            android:id="@+id/tv_register_protocol"
            android:layout_toRightOf="@id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《中仕学社用户协议》"
            android:textSize="12sp"
            android:textColor="#5d70c8"/>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:padding="8dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:background="@drawable/bt_shape"
        android:layout_marginTop="35dp"/>
</LinearLayout>
