<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/rl_topbar_bg">
    <Button
        android:id="@+id/bt_find_back"
        style="@style/bt_topbar_back"
        android:text="找回密码"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请在下面输入您要找回的账号："
            android:textSize="16sp"
            android:textColor="#000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_find_pwd_number"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:background="@null"
            android:inputType="number"
            android:hint="请输入手机号/邮箱"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@mipmap/base_horizontal_line"
            android:layout_below="@id/et_find_pwd_number"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <EditText
            android:id="@+id/et_find_pwd_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:hint="请输入校验码"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/bt_sendsms_code"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/bt_yzm_shape"
            android:text="获取验证码"
            android:padding="3dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/base_horizontal_line"
            android:layout_below="@id/bt_sendsms_code" />
    </RelativeLayout>
        <Button
            android:id="@+id/bt_find_pwd"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_shape"
            android:padding="5dp"
            android:text="验证"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</LinearLayout>