<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_more_tj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        style="@style/rl_topbar_bg">
        <Button
            android:id="@+id/bt_moretj_back"
            style="@style/bt_topbar_back"/>
        <ImageButton
            android:id="@+id/ib_moretj_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/right_top_search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <com.huida.zsxs.view.ProgressLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:progressBackground="#fff"
        app:progress="false"
        android:id="@+id/pl_more_tj"
        >
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:divider="#00000000"
            android:listSelector="@drawable/bg_gary_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_more_tj"
            android:background="#fff"
            app:ptrHeaderTextColor="@color/refresh"
            app:ptrHeaderSubTextColor="@color/refresh"
            app:ptrAnimationStyle="flip"
            ></com.handmark.pulltorefresh.library.PullToRefreshListView>
    </com.huida.zsxs.view.ProgressLayout>

</LinearLayout>
